<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textInicioSesion"
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:gravity="center"
        android:text="@string/textLogin"
        android:textColor="@color/white"
        android:textColorHighlight="@color/design_default_color_primary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userEmailData"
        android:layout_width="349dp"
        android:layout_height="64dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="@color/whiteBasic"
        android:autofillHints="emailAddress"
        android:ems="10"
        android:hint="@string/textEmail"
        android:inputType="textEmailAddress"
        android:shadowColor="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/whiteBasic"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInicioSesion" />

    <EditText
        android:id="@+id/userDataPassword"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/whiteBasic"
        android:autofillHints="password"
        android:ems="10"
        android:hint="@string/textPassword"
        android:inputType="textPassword"
        android:shadowColor="#FFFFFF"
        android:textColor="@color/white"
        android:textColorHint="@color/whiteBasic"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEmailData" />

    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="154dp"
        android:layout_height="66dp"
        android:layout_marginTop="148dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:text="@string/textButton"
        android:textColor="@color/whiteBasic"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDataPassword"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>